{
  // Required
  "name": "terkait",
  "version": "0.2",

  // Recommended
  "description": "A user interface to trigger a semantic search for related content.",
  "icons": { 
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  },
  
  "options_page": "resources/fancy-settings/index.html",
  
  "browser_action": {
    "default_icon":  "icons/icon18.png",
    "default_title": "Show related content"
  },

  // Add any of these that you need
  "background_page": "background.html",
  "content_scripts": [
    {
      "run_at" : "document_start",
      "matches": ["http://*/*", "https://*/*"],
      "css": ["terkait.css"],
      "js": [
      	"lib/vie-latest-ALL.debug.js",
        "lib/jquery.rdfquery.js",
        "lib/MicrodataService.js",
        "lib/jquery-ui-1.8.16.js",
      	"lib/vie.widget.image_search.js",
      	"lib/vie.widget.video_search.js",
      	"lib/vie.widget.news_search.js",
      	"lib/vie.annotate.js",
      	"terkait_util.js",
      	"terkait_rules.js",
      	"terkait_main.js",
      	"terkait_render.js",
      	"terkait_form_editor.js",
      	"terkait_communication.js"]
    }
  ],
  "permissions": [
    "contextMenus", "tabs", "http://*/*", "https://*/*"
  ],
  "homepage_url": "http://github.com/neogermi/terkait",
  "minimum_chrome_version": "15.0",
  "offline_enabled": false
}
